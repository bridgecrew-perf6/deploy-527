<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        
  		<h1>Editing Book</h1>
  		  <%= form_with model:[:public, @book], local:true do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control', size: "20x10" %>
          </div>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.attachment_field :image, class: 'form-control', size: "20x10" %>
          </div>
          <div class="form-group">
            <%= f.label :place %>
            <%= f.text_area :place, class: 'form-control', size: "20x10" %>
          </div>
          <div class="form-group">
            <%= f.label :explanation %>
            <%= f.text_area :explanation, class: 'form-control', size: "20x10" %>
          </div>
          <div class="form-group">
            <%= f.submit "編集内容を保存する", class: "btn btn-dark save col-xs-6" %>
            <%= link_to 'Show', public_book_path(@book), class: "book_#{@book.id} btn btn-dark back col-xs-6" %> |
  	        <%= link_to 'Back', public_books_path, class: "back" %>
          </div>
        <% end %>
        
  </div>
</div>