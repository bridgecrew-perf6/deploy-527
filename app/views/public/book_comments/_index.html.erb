<% book.book_comments.each do |book_comment| %>
  <% book_comment_customer = book_comment.customer %>
  <tr>
  	<td>
  		<%= link_to public_customers_path(book_comment_customer), class: "customer_#{book_comment_customer.id}" do %>
    		<%= attachment_image_tag book_comment_customer, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
    		<%= book_comment_customer.name %>
  		<% end %>
  	</td>
  	<td><%= book_comment.comment %></td>
  	<% if current_customer == book_comment_customer %>
    	<td><%= link_to 'Destroy', public_book_book_comment_path(book_comment.book_id, book_comment.id), class: 'btn-sm btn-danger', method: :delete, remote: true %></td>
  	<% end %>
  </tr>
<% end %>