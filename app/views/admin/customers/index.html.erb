<div class='container px-5 px-sm-0'>
  <div class='row'>
      <h2>Users</h2>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <!--↓↓ユーザー一覧-->
          <% @customers.each do |customer| %>
            <tr>
              <td><%= attachment_image_tag(customer, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
              <td><%= customer.name %></td>
              <td><%= link_to 'Show', admin_customer_path(customer), class: "customer_#{customer.id}" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>